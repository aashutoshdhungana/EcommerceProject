@page
@model LogoutModel
@{
    ViewData["Title"] = " Log Out";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        <h3 class="mt-4">Are you sure to log out?</h3>
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline mt-5" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger text-light">Log Out</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
